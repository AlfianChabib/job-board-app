{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "./apps/**/.env.*local"],
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["DATABASE_URL"]
    },
    "lint": {},
    "test": {},
    "serve": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
